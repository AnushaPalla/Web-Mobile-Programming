<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="16dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/lblHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Welcome to Bearth World"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/lblSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lblHome"
        android:text="Please Click on the Required Option"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnDoulas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblSelect"
        android:text="Doulas"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"
        android:onClick="doulas"/>
    <Button
        android:id="@+id/btnAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnDoulas"
        android:text="Schedule Appointment"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"/>

</RelativeLayout>